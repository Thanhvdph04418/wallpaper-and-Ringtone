<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Color"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="20dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <adapter.SquareImageView
                    android:id="@+id/green"
                    android:layout_width="100dp"
                    android:background="@drawable/cicle"
                    android:layout_height="match_parent" />

                <adapter.SquareImageView
                    android:layout_marginLeft="6dp"
                    android:id="@+id/red"
                    android:layout_width="100dp"
                    android:background="@drawable/ciclered"
                    android:layout_height="match_parent" />

                <adapter.SquareImageView
                    android:layout_marginLeft="6dp"
                    android:id="@+id/blue"
                    android:layout_width="100dp"
                    android:background="@drawable/cicleblue"
                    android:layout_height="match_parent" />

                <adapter.SquareImageView
                    android:layout_marginLeft="6dp"
                    android:id="@+id/yellow"
                    android:layout_width="100dp"
                    android:background="@drawable/cicleyeloow"
                    android:layout_height="match_parent" />

                <adapter.SquareImageView
                    android:layout_marginLeft="6dp"
                    android:id="@+id/gray"
                    android:layout_width="100dp"
                    android:background="@drawable/ciclegray"
                    android:layout_height="match_parent" />

                <adapter.SquareImageView
                    android:layout_marginLeft="6dp"
                    android:id="@+id/pink"
                    android:layout_width="100dp"
                    android:background="@drawable/ciclepink"
                    android:layout_height="match_parent" />

                <adapter.SquareImageView
                    android:layout_marginLeft="6dp"
                    android:id="@+id/sienna"
                    android:layout_width="100dp"
                    android:background="@drawable/ciclesienna"
                    android:layout_height="match_parent" />

                <adapter.SquareImageView
                    android:layout_marginLeft="6dp"
                    android:id="@+id/orchid"
                    android:layout_width="100dp"
                    android:background="@drawable/cicleorchid"
                    android:layout_height="match_parent" />

                <adapter.SquareImageView
                    android:layout_marginLeft="6dp"
                    android:id="@+id/white"
                    android:layout_width="100dp"
                    android:background="@drawable/cicle"
                    android:layout_height="match_parent" />



            </LinearLayout>
        </HorizontalScrollView>


<TextView
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="Categories"
    android:textColor="@color/colorAccent"
    android:layout_marginLeft="20dp"
    />
        <TableLayout
            android:id="@+id/lytt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow android:layout_marginTop="6dp">

                <adapter.CustomButton
                    android:id="@+id/pcAbstract"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ab"
                    android:scaleType="centerCrop"
                    android:text="Abstract"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

                <adapter.CustomButton
                    android:id="@+id/pcAnimals"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/animals"
                    android:scaleType="centerCrop"
                    android:text="Animals"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />


            </TableRow>

            <TableRow android:layout_marginTop="6dp">

                <adapter.CustomButton
                    android:id="@+id/pcAnime"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/anime"
                    android:scaleType="centerCrop"
                    android:text="Anime"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

                <adapter.CustomButton
                    android:id="@+id/pcBrands"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/brands"
                    android:scaleType="centerCrop"
                    android:text="Brands"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />


            </TableRow>

            <TableRow android:layout_marginTop="6dp">

                <adapter.CustomButton
                    android:id="@+id/pcCartoon"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/cartoon"
                    android:scaleType="centerCrop"
                    android:text="Cartoon"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

                <adapter.CustomButton
                    android:id="@+id/pcFantasy"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/fantasy"
                    android:scaleType="centerCrop"
                    android:text="Fantasy"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />


            </TableRow>

            <TableRow android:layout_marginTop="6dp">

                <adapter.CustomButton
                    android:id="@+id/pcGames"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/games"
                    android:scaleType="centerCrop"
                    android:text="Games"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

                <adapter.CustomButton
                    android:id="@+id/pcPictures"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/pictures"
                    android:scaleType="centerCrop"
                    android:text="Pictures"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />


            </TableRow>

            <TableRow android:layout_marginTop="6dp">

                <adapter.CustomButton
                    android:id="@+id/pcFunny"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/funny"
                    android:scaleType="centerCrop"
                    android:text="Funny"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

                <adapter.CustomButton
                    android:id="@+id/pcSexy"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/sexy"
                    android:scaleType="centerCrop"
                    android:text="Sexy"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />


            </TableRow>


        </TableLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>


        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>