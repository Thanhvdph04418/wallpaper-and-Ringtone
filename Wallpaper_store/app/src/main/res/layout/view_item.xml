<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <LinearLayout

                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/ly1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <adapter.CustomIMG
                        android:id="@+id/imgBig"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@color/colorPrimary"
                        app:srcCompat="@drawable/anh2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:background="#99000000"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            app:srcCompat="@android:drawable/stat_sys_download" />


                        <TextView
                            android:id="@+id/txtDow"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.97"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textColor="@color/colorAccent" />

                        <ImageView
                            android:id="@+id/imgSent"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="40dp"
                            app:srcCompat="@drawable/email" />

                        <ImageView
                            android:id="@+id/imgDownload"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="40dp"
                            app:srcCompat="@drawable/download" />

                        <ImageView
                            android:id="@+id/imgset"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/controls" />

                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:id="@+id/txtTuongtu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#555555"
                    android:gravity="center_vertical"
                    android:text=" Similar wallpaper"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/pro1"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_gravity="center" />

                    <GridView
                        android:id="@+id/GVitem"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorPrimary"
                        android:horizontalSpacing="3dp"
                        android:numColumns="5"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="3dp" />



            </LinearLayout>

        <ImageView
            android:id="@+id/imgthoat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />
    </FrameLayout>
</LinearLayout>